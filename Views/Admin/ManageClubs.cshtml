@model IEnumerable<ClubMates.Web.Models.AdminViewModel.ClubViewModel>

@{
	ViewBag.Title = "Manage Clubs";
}
<div class="form-container">
	@if (Model != null && Model.Any())
	{

		<div>

			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Club Name</th>
						<th>Club Category</th>
						<th>Club Type</th>
						<th>Club Manager</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var club in Model)
					{
						<tr>
							<td>@club.ClubName</td>
							<td>@Enum.GetName(club.CLUBCATEGORY)</td>
							<td>@Enum.GetName(club.CLUBTYPE)</td>
						<td>@club.ClubManager</td>
							<td>
								<a asp-asp-controller="Admin" asp-action="EditClub" asp-route-ClubId="@club.ClubId" class="btn btn-primary">Edit</a>
								<a asp-asp-controller="Admin" asp-action="DeleteClub" asp-route-ClubId="@club.ClubId" class="btn btn-danger">DeleteClub</a>
							</td>
						</tr>
					}
				</tbody>
			</table>

		</div>
	}
	else
	{
		<div class="alert alert-info" role="alert">No User Found</div>
	}
	<br />
	<a asp-asp-controller="Admin" asp-action="CreateClub" class="btn btn mb-3">Create new Club</a>
</div>